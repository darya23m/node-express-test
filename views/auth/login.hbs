<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Log In</a></li>
        <li class="tab col s6"><a class="active" href="#register">Registration</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">

      {{#if loginError}}
        <p class="alert">{{loginError}}</p>
      {{/if}}

      <h1>Log in to shop</h1>
      <form action="/auth/login" method="POST">
        <div class="input-field">
          <input id="email" name="email" type="email" class="validate" required>
          <label for="email">Email</label>
          <span class="helper-text" data-error="Input the e-mail">Your e-mail</span>
        </div>

        <div class="input-field">
          <input id="password" name="password" type="password" class="validate" required >
          <label for="password">Password</label>
          <span class="helper-text" data-error="Input the password">Your password</span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button type="submit" class="btn btn-primary">Log in</button>
      </form>
    </div>
    
    <div id="register" class="col s6 offset-s3">

      {{#if registerError}}
        <p class="alert">{{registerError}}</p>
      {{/if}}

      <h1>Registrate your account</h1>
      <form action="/auth/register" method="POST" novalidate>
        <div class="input-field">
          <input id="remail" name="email" type="email" class="validate" required>
          <label for="remail">Email</label>
          <span class="helper-text" data-error="Input the email">Your e-mail</span>
        </div>

        <div class="input-field">
          <input id="rpassword" name="password" type="password" class="validate" required >
          <label for="rpassword">Password</label>
          <span class="helper-text" data-error="Input the password">Your password</span>
        </div>

        <div class="input-field">
          <input id="confirm" name="confirm" type="password" class="validate" required >
          <label for="confirm">Password again</label>
          <span class="helper-text" data-error="Input the password adain">Your password again</span>
        </div>

        <div class="input-field">
          <input id="name" name="name" type="text" class="validate" required >
          <label for="name">Your name</label>
          <span class="helper-text" data-error="Input your name">Your name</span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button type="submit" class="btn btn-primary">Ragistrate</button>
      </form>
    </div>
  </div>
</div>
